Recursive functions are supported in files.

SOURCE:
file: main.brg

fn foo(n: int) -> int {
  if n != 5 {
    return foo(n + 1)
  }

  n
}

fn main() {
  assert_eq(foo(1), 5)
}

OUTPUT:

---
package main

func foo(n int) int {
	if n != 5 {
		return foo(n + 1)
	}

	return n
}

func main() {
	assert_eq[int](foo(1), 5)
}
